<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="135dp"
        android:layout_height="168dp"
        android:background="@drawable/img_pop_bg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_head"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/img_head"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toLeftOf="@id/tv_user_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c503B8B"
            android:textSize="@dimen/sp10"
            android:textStyle="bold"
            android:text="阅知"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toRightOf="@id/iv_head"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_head"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c503B8B"
            android:layout_marginTop="11dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_head"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的评论"
            android:textSize="@dimen/sp7"
            android:textColor="@android:color/black"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_comment"
            android:drawableEnd="@drawable/ic_more"
            android:layout_marginTop="17dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="7dp"
            app:layout_constraintTop_toBottomOf="@id/iv_head"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_collected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textSize="@dimen/sp7"
            android:textColor="@android:color/black"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_collected"
            android:drawableEnd="@drawable/ic_more"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="7dp"
            app:layout_constraintTop_toBottomOf="@id/tv_comment"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c503B8B"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_collected"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="反馈与帮助"
            android:textSize="@dimen/sp7"
            android:textColor="@android:color/black"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_help"
            android:drawableEnd="@drawable/ic_more"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="7dp"
            app:layout_constraintTop_toBottomOf="@id/tv_collected"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="@dimen/sp7"
            android:textColor="@android:color/black"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_logout"
            android:drawableEnd="@drawable/ic_more"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="7dp"
            app:layout_constraintTop_toBottomOf="@id/tv_help"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>