<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <Button
        android:id="@+id/btn_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rzp info" />
    
    <Button
        android:id="@+id/btn_unrzp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rzp unpack" />

    <Button
        android:id="@+id/btn_rzp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rzp pack" />
    
    <Button
        android:id="@+id/btn_rzp2zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rzp 2 zip" />
    
    <Button
        android:id="@+id/btn_zip2rzp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="zip 2 zip" />

</LinearLayout>